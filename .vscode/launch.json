    "version": "0.2.0",
    "configurations": [
        {
            "name": "Main",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/whatstat/main.py",
            "console": "integratedTerminal",
            "pythonPath": "${command:python.interpreterPath}",
            "args": ["config.json"]
        },
        {
            "name": "Merger",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/whatstat/merge_chat_files.py",
            "args": ["chat1.txt",
                     "chat2.txt",
                     "-o",
                     "merged_chat.txt"],
            "console": "integratedTerminal",
            "pythonPath": "${command:python.interpreterPath}",
        }
    ]
}
